---
import "../styles/global.css";

interface Props {
    pageTitle?: string;
}

const { pageTitle } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="alternate" type="application/rss+xml" title="Neville Omangi" href={new URL("rss.xml", Astro.site)} />
    
    <title>{ pageTitle ? `${pageTitle} | Neville Omangi` : "Neville Omangi" }</title>
    
    <meta name="description" content="Neville Omangi's personal website and blog." />
    <meta name="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta property="og:title" content="Neville Omangi">
    <meta property="og:description" content="Neville Omangi's personal website and blog.">
    <meta property="og:image" content={new URL("avatar.png", Astro.site)}>
  </head>
  <body>
    <slot />
  </body>
</html>
