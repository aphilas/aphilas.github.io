---
import BaseLayout from './BaseLayout.astro';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<style>
main {
  margin: 0 auto;
  width: 100%;
  max-width: 100ch;
  min-height: 100dvh;
  padding: 1rem;
  line-height: 1.5;
}
</style>

<BaseLayout pageTitle={pageTitle}>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</BaseLayout>
